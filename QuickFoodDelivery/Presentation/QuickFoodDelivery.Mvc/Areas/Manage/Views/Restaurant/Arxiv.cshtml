@model ICollection<RestaurantItemVm>
@{
    int count = 1;
}


<div class="col-xl-12">
    <div class="card custom-card">
        <div class="card-header justify-content-between">
            <div class="card-title">
                Arxiv
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table text-nowrap">
                    <thead class="table-primary">
                        <tr>
                            <th scope="col">Count</th>
                            <th scope="col">Image</th>
                            <th scope="col">Name</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Address</th>
                            <th scope="col">Is Opening</th>
                            <th scope="col">Reverse</th>
                            <th scope="col">Details</th>
                            <th scope="col">Delete</th>
                            <th><a asp-action="Index" asp-controller="Restaurant" class="btn btn-success"><i class="fa fa-address-book"></i></a></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(count++)</td>
                                <td>
                                    <div class="thumb_strip">
                                        <img style="width:50px; height:50px" src="~/assets/img/restaurantImages/@item.Image" alt="">
                                    </div>
                                </td>
                                <td scope="row">@item.Name</td>
                                <td>@item.Phone</td>
                                <td>@item.Address</td>
                                <td>@item.IsOpening</td>
                                <td><a asp-action="ReverseDelete" asp-controller="Restaurant" asp-route-id="@item.Id" class="btn btn-info"><i class="fas fa-history"></i></a></td>
                                <td><a asp-action="Detail" asp-controller="Meal" asp-route-id="@item.Id" class="btn btn-primary"><i class="fas fa-info"></i></a></td>
                                <td><a asp-action="Delete" asp-controller="Restaurant" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a></td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>