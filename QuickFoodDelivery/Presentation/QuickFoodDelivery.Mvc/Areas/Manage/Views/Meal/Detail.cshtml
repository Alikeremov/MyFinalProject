@model MealItemVm
<div class="card" style="width: 18rem;">
    <img src="~/assets/img/mealImages/@Model.Image" class="card-img-top" alt="~/assets/img/mealImages/@Model.Image">
    <div class="card-body">
        <h2>@Model.Name</h2>
        <h4>Price: $@Model.Price</h4>
        <p class="card-text">Category: @Model.Category?.Name</p>
        <p class="card-text">Restaurant: @Model.Restaurant?.Name</p>
    </div>
</div>

