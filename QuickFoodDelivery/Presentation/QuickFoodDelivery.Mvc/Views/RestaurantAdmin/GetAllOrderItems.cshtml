@model ICollection<OrderItemVm>
@{
    int count = 1;
}
<section class="parallax-window" id="short" data-parallax="scroll" data-image-src="/assets/img/sub_header_cart.jpg" data-natural-width="1400" data-natural-height="350">
    <div id="subheader">
        <div id="sub_content">
        </div><!-- End sub_content -->
    </div><!-- End subheader -->
</section>
<div class="container margin_60">
    <div id="tabs" class="tabs">


        <table class="table table-striped cart-list">
            <thead>
                <tr>
                    <th>
                        Count
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Total
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count>0)
                {

                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                <h5>@(count++). @item.Count x @item.MealName</h5>
                            </td>
                            <td>
                                <strong>$ @item.Price</strong>
                            </td>
                            <td>
                                <strong>$ @item.Price</strong>
                            </td>
                            <td>
                                <strong>Total: $@(item.Price * item.Count)</strong>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>
</div><!-- End container  -->