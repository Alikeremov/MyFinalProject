@model OrderGetVm
@{
    int count = 1;
}
<head>
    <link href="~/assets/css/skins/square/grey.css" rel="stylesheet">

    <!-- Gallery -->
    <link href="~/assets/css/slider-pro.min.css" rel="stylesheet">
</head>

<div class="container margin_60_35">
    <div class="row">
        <div class="col-lg-4">
            <p>
                <a class="btn_map" data-toggle="collapse" href="#collapseMap" aria-expanded="false" aria-controls="collapseMap" data-text-swap="Hide map" data-text-original="View on map">View on map</a>
            </p>
            <div class="box_style_2">
                <h4 class="nomargin_top">Opening time <i class="icon_clock_alt float-right"></i></h4>
                <ul class="opening_list">
                    @foreach (var item in Model.RestaurantAddreses)
                    {
                        <li>Address @(count++):<span>@item</span></li>
                    }
                </ul>
            </div>
            <div class="box_style_2 d-none d-sm-block" id="help">
                <i class="icon_lifesaver"></i>
                <h4>Contact <span>User</span></h4>
                <a href="tel://@Model.UserPhoneNumber" class="phone">@Model.UserPhoneNumber</a>
                <small></small>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="box_style_2">
                <h2 class="inner">@Model.UserAddress</h2>
                <h3>@Model.UserName @Model.UserSurname</h3>
                <p>
                    @Model.NotesForRestaurant
                </p>
                <p class="add_bottom_30">
                    @Model.Status
                </p>
            </div><!-- End box_style_1 -->
        </div>
    </div><!-- End row -->
</div><!-- End container -->