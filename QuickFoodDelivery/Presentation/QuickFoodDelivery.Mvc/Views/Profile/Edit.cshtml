@model ProfileUpdateVm

<div class="container margin_60">
    <div class="main_title margin_mobile">
        <h2 class="nomargin_top">Please submit the form below</h2>
        <p>
            Cum doctus civibus efficiantur in imperdiet deterruisset.
        </p>
    </div>
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <form method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <img style="width:75px; height:75px" src="~/assets/img/@Model.ProfileImage" alt="">
                            <input asp-for="ProfileImage" type="hidden" />
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label asp-for="ProfilePhoto">ProfilePhoto</label>
                            <input asp-for="ProfilePhoto" accept="image/*" class="form-control" placeholder="ProfilePhoto">
                            <span asp-validation-for="ProfilePhoto"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label asp-for="Name">Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Jhon">
                            <span asp-validation-for="Name"></span>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <label asp-for="Surname">Surname</label>
                        <input asp-for="Surname" class="form-control" placeholder="Surname">
                        <span asp-validation-for="Surname"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label asp-for="UserName">UserName</label>
                            <input asp-for="UserName" class="form-control" placeholder="UserName">
                            <span asp-validation-for="UserName"></span>
                        </div>
                    </div>
                </div>
                <hr style="border-color:#ddd;">
                <div class="text-center"><button class="btn_full_outline">Submit</button></div>
            </form>
        </div><!-- End col  -->
    </div><!-- End row  -->
</div><!-- End container  -->