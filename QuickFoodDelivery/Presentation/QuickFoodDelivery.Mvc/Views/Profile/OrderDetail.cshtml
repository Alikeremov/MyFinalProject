@model OrderGetVm
@{
    int count = 1;
}
<head>
    <link href="~/assets/css/skins/square/grey.css" rel="stylesheet">

    <!-- Gallery -->
    <link href="~/assets/css/slider-pro.min.css" rel="stylesheet">
</head>

<div class="container margin_60_35">
    <div class="row">
        <div class="col-lg-4">
            <div class="box_style_2">
                <h4 class="nomargin_top">Opening time <i class="icon_clock_alt float-right"></i></h4>
                <ul class="opening_list">
                    @foreach (var item in Model.OrderItemVms)
                    {
                        <li>@(count++):<span>@item.MealName</span> <p>@item.Price </p></li>
                    }
                </ul>
            </div>
            <div class="box_style_2 d-none d-sm-block" id="help">
                <i class="icon_lifesaver"></i>
                <h4>Contact <span>User</span></h4>
                <a href="tel://@Model.UserPhoneNumber" class="phone">@Model.UserPhoneNumber</a>
                <small></small>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="box_style_2">
                <h2 class="inner">@Model.UserAddress</h2>
                <h3>@Model @Model.UserSurname</h3>
                <p>
                    @Model.NotesForRestaurant
                </p>
                <p class="add_bottom_30">
                    @Model.Status
                </p>
                <p class="add_bottom_30">
                    @Model.TotalPrice
                </p>
            </div><!-- End box_style_1 -->
        </div>
        <div class="col-lg-12">

            <div class="desc">
                <div class="thumb_strip">
                    <img src="~/assets/img/courierImages/@Model.Courier.Image" style="width:100px; height:100px; border-radius:50px;" alt="">
                </div>
                <div class="rating">
                    <i class="icon_star voted"></i><i class="icon_star voted"></i><i class="icon_star voted"></i><i class="icon_star voted"></i><i class="icon_star"></i>
                </div>
                <h3>Courier FullName:@Model.Courier.Name @Model.Courier.Surname</h3>
                <div class="type">
                    <a href="tel://@Model.Courier.PhoneNumber" class="phone">@Model.Courier.PhoneNumber</a>
                </div>
                <div class="">
                    <a href="mail://@Model.Courier.Email" class="phone">@Model.Courier.Email</a>
                </div>
            </div><!-- End desc-->

        </div>
    </div><!-- End row -->
</div><!-- End container -->